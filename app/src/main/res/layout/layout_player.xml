<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    android:animateLayoutChanges="true">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            app:tint="@color/glass_text_primary"
            android:background="@drawable/bg_glass_card"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/btnSwap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="@color/glass_text_primary"
            android:background="@drawable/bg_glass_card"
            android:padding="8dp"
            android:layout_toStartOf="@id/btnSplitToggle"
            android:layout_marginEnd="16dp"
            android:tooltipText="Swap Channels"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btnSplitToggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_split_mode"
            app:tint="@color/glass_text_primary"
            android:background="@drawable/bg_glass_card"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:tooltipText="Toggle Split Mode"/>
    </RelativeLayout>
    
    <!-- MAIN PLAYER CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <!-- PLAYER A -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerContainerA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_glass_card"
            android:layout_marginBottom="8dp"
            android:padding="16dp">

            <!-- Playlist Button A (Top Left) -->
             <ImageButton
                android:id="@+id/btnSelectMusicA"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_playlist_music"
                app:tint="#00E5FF"
                android:background="@drawable/bg_glass_card"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tooltipText="Select Music for A"/>

            <!-- Vertical Volume Slider -->
            <SeekBar
                android:id="@+id/seekBarVolumeA"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:progress="100"
                android:max="100"
                android:progressDrawable="@drawable/bg_volume_track"
                android:thumb="@drawable/thumb_volume_blue"
                app:layout_constraintBottom_toBottomOf="@id/vinylContainerA"
                app:layout_constraintTop_toTopOf="@id/vinylContainerA"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="-50dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                app:tint="@color/glass_text_secondary"
                app:layout_constraintTop_toBottomOf="@id/seekBarVolumeA"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"/>

            <!-- Vinyl & Progress -->
            <FrameLayout
                android:id="@+id/vinylContainerA"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/seekBarProgressA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="48dp">
                
                <!-- Vinyl Background -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_vinyl"/>
                
                <!-- Circular Album Art -->
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_album_placeholder"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                
                <!-- Circular Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBarA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/ring_progress_blue"
                    android:progress="40"
                    android:max="100"
                    android:rotation="-90"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </FrameLayout>
            
            <!-- Visualizer A (Simulated Sound Wave) -->
            <LinearLayout
                android:id="@+id/visualizerContainerA"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center|bottom"
                app:layout_constraintTop_toBottomOf="@id/vinylContainerA"
                app:layout_constraintBottom_toTopOf="@+id/seekBarProgressA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <View android:id="@+id/barA1" android:layout_width="4dp" android:layout_height="10dp" android:background="#00E5FF" android:layout_margin="2dp"/>
                <View android:id="@+id/barA2" android:layout_width="4dp" android:layout_height="20dp" android:background="#00E5FF" android:layout_margin="2dp"/>
                <View android:id="@+id/barA3" android:layout_width="4dp" android:layout_height="15dp" android:background="#00E5FF" android:layout_margin="2dp"/>
                <View android:id="@+id/barA4" android:layout_width="4dp" android:layout_height="25dp" android:background="#00E5FF" android:layout_margin="2dp"/>
                <View android:id="@+id/barA5" android:layout_width="4dp" android:layout_height="10dp" android:background="#00E5FF" android:layout_margin="2dp"/>
            </LinearLayout>
            
            <!-- Seek Bar A -->
            <SeekBar
                android:id="@+id/seekBarProgressA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/progress_gradient_blue"
                android:thumbTint="#00E5FF"
                app:layout_constraintTop_toBottomOf="@id/visualizerContainerA"
                app:layout_constraintBottom_toTopOf="@+id/tvPlayerDurationA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <!-- Time Text -->
            <TextView
                android:id="@+id/tvPlayerDurationA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textColor="#00E5FF"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/seekBarProgressA"
                app:layout_constraintBottom_toTopOf="@+id/labelPlayerA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"/>

            <!-- Titles -->
            <TextView
                android:id="@+id/labelPlayerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEFT SIDE PLAYER"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvPlayerDurationA"
                app:layout_constraintBottom_toTopOf="@+id/tvPlayerSongA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvPlayerSongA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textColor="@color/glass_text_secondary"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                app:layout_constraintTop_toBottomOf="@id/labelPlayerA"
                app:layout_constraintBottom_toTopOf="@+id/controlsA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="2dp"/>

            <!-- Controls Row -->
            <LinearLayout
                android:id="@+id/controlsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlayerSongA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/btnRecycleA"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_shuffle"
                    android:background="@drawable/bg_glass_card"
                    app:tint="@color/glass_text_secondary"
                    android:padding="6dp"/>
                
                <ImageButton
                    android:id="@+id/btnPlayerPrevA"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/glass_text_primary"
                    android:layout_marginStart="12dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlayerPlayA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_play"
                    app:backgroundTint="#00E5FF"
                    app:tint="@color/white"
                    app:fabSize="mini"
                    app:elevation="4dp"
                    android:layout_marginHorizontal="16dp"/>

                <ImageButton
                    android:id="@+id/btnPlayerNextA"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/glass_text_primary"
                    android:layout_marginEnd="12dp"/>
                    
                 <ImageButton
                    android:id="@+id/btnRepeatA"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_repeat"
                    android:background="@drawable/bg_glass_card"
                    app:tint="@color/glass_text_secondary"
                    android:padding="6dp"/>
            </LinearLayout>
            


        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- PLAYER B (Bottom Half) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playerContainerB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_glass_card"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:visibility="gone">

             <!-- Playlist Button B (Top Left) -->
             <ImageButton
                android:id="@+id/btnSelectMusicB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_playlist_music"
                app:tint="#FF9100"
                android:background="@drawable/bg_glass_card"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tooltipText="Select Music for B"/>

            <!-- Vertical Volume Slider -->
            <SeekBar
                android:id="@+id/seekBarVolumeB"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:progress="100"
                android:max="100"
                android:progressDrawable="@drawable/bg_volume_track"
                android:thumb="@drawable/thumb_volume_orange"
                app:layout_constraintBottom_toBottomOf="@id/vinylContainerB"
                app:layout_constraintTop_toTopOf="@id/vinylContainerB"
                app:layout_constraintStart_toStartOf="parent"
                android:translationX="-50dp"/>
                
             <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                app:tint="@color/glass_text_secondary"
                app:layout_constraintTop_toBottomOf="@id/seekBarVolumeB"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"/>


            <!-- Vinyl & Progress -->
            <FrameLayout
                android:id="@+id/vinylContainerB"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/seekBarProgressB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="48dp">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_vinyl"/>
                
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_album_placeholder"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                
                <ProgressBar
                    android:id="@+id/progressBarB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/ring_progress_orange"
                    android:progress="60"
                    android:max="100"
                    android:rotation="-90"
                    style="?android:attr/progressBarStyleHorizontal"/>
            </FrameLayout>
            
            <!-- Visualizer B (Simulated Sound Wave) -->
            <LinearLayout
                android:id="@+id/visualizerContainerB"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center|bottom"
                app:layout_constraintTop_toBottomOf="@id/vinylContainerB"
                app:layout_constraintBottom_toTopOf="@+id/seekBarProgressB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <View android:id="@+id/barB1" android:layout_width="4dp" android:layout_height="10dp" android:background="#FF9100" android:layout_margin="2dp"/>
                <View android:id="@+id/barB2" android:layout_width="4dp" android:layout_height="20dp" android:background="#FF9100" android:layout_margin="2dp"/>
                <View android:id="@+id/barB3" android:layout_width="4dp" android:layout_height="15dp" android:background="#FF9100" android:layout_margin="2dp"/>
                <View android:id="@+id/barB4" android:layout_width="4dp" android:layout_height="25dp" android:background="#FF9100" android:layout_margin="2dp"/>
                <View android:id="@+id/barB5" android:layout_width="4dp" android:layout_height="10dp" android:background="#FF9100" android:layout_margin="2dp"/>
            </LinearLayout>

            <!-- Seek Bar B -->
            <SeekBar
                android:id="@+id/seekBarProgressB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/progress_gradient_orange"
                android:thumbTint="#FF9100"
                app:layout_constraintTop_toBottomOf="@id/visualizerContainerB"
                app:layout_constraintBottom_toTopOf="@+id/tvPlayerDurationB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            
            <!-- Time Text -->
            <TextView
                android:id="@+id/tvPlayerDurationB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textColor="#FF9100"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/seekBarProgressB"
                app:layout_constraintBottom_toTopOf="@+id/labelPlayerB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"/>

            <!-- Titles -->
            <TextView
                android:id="@+id/labelPlayerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RIGHT SIDE PLAYER"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tvPlayerDurationB"
                app:layout_constraintBottom_toTopOf="@+id/tvPlayerSongB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvPlayerSongB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textColor="@color/glass_text_secondary"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                app:layout_constraintTop_toBottomOf="@id/labelPlayerB"
                app:layout_constraintBottom_toTopOf="@+id/controlsB"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="2dp"/>

            <!-- Controls Row -->
            <LinearLayout
                android:id="@+id/controlsB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlayerSongB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/btnRecycleB"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_shuffle"
                    android:background="@drawable/bg_glass_card"
                    app:tint="@color/glass_text_secondary"
                    android:padding="6dp"/>
                
                <ImageButton
                    android:id="@+id/btnPlayerPrevB"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/glass_text_primary"
                    android:layout_marginStart="12dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlayerPlayB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_media_play"
                    app:backgroundTint="#FF9100"
                    app:tint="@color/white"
                    app:fabSize="mini"
                    app:elevation="4dp"
                    android:layout_marginHorizontal="16dp"/>

                <ImageButton
                    android:id="@+id/btnPlayerNextB"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@color/glass_text_primary"
                    android:layout_marginEnd="12dp"/>
                    
                 <ImageButton
                    android:id="@+id/btnRepeatB"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_repeat"
                    android:background="@drawable/bg_glass_card"
                    app:tint="@color/glass_text_secondary"
                    android:padding="6dp"/>
            </LinearLayout>
            


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
