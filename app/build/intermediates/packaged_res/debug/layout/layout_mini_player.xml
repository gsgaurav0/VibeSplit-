<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_glass_card"
        android:padding="8dp">

        <!-- Progress Bar (Thin line at top) -->
        <ProgressBar
            android:id="@+id/miniProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:progressDrawable="@drawable/progress_gradient_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Album Art / Icon (Spinning Vinyl) -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp">
                 <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_vinyl"
                    android:padding="2dp"/>
                 <ImageView
                    android:id="@+id/miniVinylIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_music_note"
                    app:tint="@color/spotify_green"
                    android:padding="12dp"/>
            </FrameLayout>

            <!-- Text Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/tvMiniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not Playing"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"/>
                    
                <TextView
                    android:id="@+id/tvMiniArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a song"
                    android:textColor="@color/glass_text_secondary"
                    android:textSize="12sp"
                    android:singleLine="true"/>
            </LinearLayout>

            <!-- Controls -->
            <ImageButton
                android:id="@+id/btnMiniPrev"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:rotation="180" 
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:layout_marginEnd="8dp"/>
                
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMiniPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:backgroundTint="@color/spotify_green"
                app:tint="@color/black"
                android:src="@android:drawable/ic_media_play"
                app:elevation="0dp"
                app:borderWidth="0dp"/>
                
            <ImageButton
                android:id="@+id/btnMiniNext"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:layout_marginStart="8dp"/>
                
            <ImageButton
                android:id="@+id/btnMiniClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/glass_text_secondary"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
