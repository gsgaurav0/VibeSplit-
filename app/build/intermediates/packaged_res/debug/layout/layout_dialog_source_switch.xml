<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_glass_gradient"
    android:padding="24dp">

    <!-- Title Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        
        <TextView
            android:id="@+id/tvSwitchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Playing Source"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnCloseSwitch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/glass_text_secondary"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Source A (Left Earbud) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnSourceA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#2AFFFFFF"
        app:cardElevation="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_headset_left" 
                app:tint="#00E5FF"
                android:background="@drawable/bg_glass_card"
                android:padding="8dp"/>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                
                <TextView
                    android:id="@+id/tvLabelSourceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Earbud Music"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                
                <TextView
                    android:id="@+id/tvPlayerSourceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player A"
                    android:textColor="#00E5FF"
                    android:textSize="14sp"/>
            </LinearLayout>
            
            <RadioButton
                android:id="@+id/radioSourceA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00E5FF"
                android:clickable="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Source B (Right Earbud) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnSourceB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#2AFFFFFF"
        app:cardElevation="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_headset_right"
                app:tint="#FF9100"
                android:background="@drawable/bg_glass_card"
                android:padding="8dp"/>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                
                <TextView
                    android:id="@+id/tvLabelSourceB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Earbud Music"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
                
                <TextView
                    android:id="@+id/tvPlayerSourceB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player B"
                    android:textColor="#FF9100"
                    android:textSize="14sp"/>
            </LinearLayout>
             <RadioButton
                android:id="@+id/radioSourceB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF9100"
                android:clickable="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
